<div class="row wrapper border-bottom white-bg page-heading">
     <div class="col-lg-10">
          <h2>Collection Report</h2>
          <ol class="breadcrumb">
               <li class="breadcrumb-item">
                    <%= link_to 'Home', root_path %>
               </li>
               <li class="breadcrumb-item">
                    <a>Reports</a>
               </li>
               <li class="breadcrumb-item active">
                    <strong>Revenue</strong>
               </li>
          </ol>
     </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight" style="padding-bottom: 0;">
     <div class="row">
          <div class="col-lg-12">
               <div class="ibox ">
                    <div class="ibox-title">
                         <h5></h5>
                         <%= form_for :filter, method: :get do |f| %>
                              <div class=row>
                                   <div class="col-md-2">
                                        <div class="input-group date" id="datetimepicker1">
                                             <%= f.text_field :from_date, class: "form-control", placeholder: "From Date", required: "" %>
                                             <div class="input-group-addon">
                                                  <i class="fa fa-calendar"></i>
                                             </div>
                                        </div>
                                   </div>
                                   <div class="col-md-2">
                                        <div class="input-group date" id="datetimepicker2">
                                             <%= f.text_field :to_date, class: "form-control", placeholder: "To Date", required: "" %>
                                             <div class="input-group-addon">
                                                  <i class="fa fa-calendar"></i>
                                             </div>
                                        </div>
                                   </div>
                                   <div class="col-md-3">
                                        <%= f.submit 'Filter', class: "btn btn-primary"%>
                                   </div>
                              </div>
                         <% end %>
                    </div>
                    <div class="ibox-content">
                         <table class="table table-striped dataTables">
                              <thead>
                                   <tr>
                                        <th>Fee No.</th>
                                        <th>Student</th>
                                        <th>Name</th>
                                        <th>Month</th>
                                        <th>Amount</th>
                                   </tr>
                              </thead>
                              <tbody>
                                   <% @revenues.each do |revenue| %>
                                        <tr>
                                             <td>
                                                  <%= revenue.fee.id %>
                                             </td>
                                             <td>
                                                <%= revenue.fee.present? ? revenue.fee.student.present? ? revenue.fee.student.code : 'N/A' : 'N/A' %>
                                             </td>
                                             <td>
                                                <%= revenue.fee.present? ? revenue.fee.student.name : 'N/A' %>
                                             </td>
                                             <td>
                                                <%= revenue.fee_date %>
                                             </td>
                                             <td><%= revenue.amount %></td>
                                        </tr>
                                   <% end %>
                              </tbody>
                         </table>
                    </div>
               </div>
          </div>
     </div>
</div>
<script type="text/javascript">
     if (! $('.dataTables').hasClass('initialized')) {
          $('.dataTables').not('.initialized').addClass('initialized').DataTable({
               pageLength: 50,
               responsive: true,
               order: [[ 1, "desc" ]],
               dom: '<"html5buttons"B>lTfgitp',
               buttons: [
               { extend: 'copy'},
               {extend: 'csv'},
               {extend: 'excel', title: 'ExampleFile'},
               {extend: 'pdf', title: 'ExampleFile'},

               {extend: 'print',
                    customize: function (win){
                         $(win.document.body).addClass('white-bg');
                         $(win.document.body).css('font-size', '10px');

                         $(win.document.body).find('table')
                                   .addClass('compact')
                                   .css('font-size', 'inherit');
               }
               }
               ]
          });
     };

     $("#datetimepicker1").datetimepicker({
            format:'YYYY-MM-DD',
        });

        $("#datetimepicker2").datetimepicker({
            format:'YYYY-MM-DD',
        });
</script>