<div class="row wrapper border-bottom white-bg page-heading">
     <div class="col-lg-10">
          <h2>Student Revenues</h2>
          <ol class="breadcrumb">
               <li class="breadcrumb-item">
                    <%= link_to 'Home', root_path %>
               </li>
               <li class="breadcrumb-item">
                    <a>Revenues</a>
               </li>
               <li class="breadcrumb-item active">
                    <strong>Student Revenues</strong>
               </li>
          </ol>
     </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight" style="padding-bottom: 0;">
     <div class="row">
          <div class="col-lg-12">
               <div class="ibox">
                    <div class="ibox-content">
                         <button type="button" class="btn btn-outline btn-success float-right" data-toggle="collapse" data-target="#student_details" aria-expanded="false">
                              <span>Student Details</span>
                         </button>
                         <div class="form-group row">
                              <label class="col-sm-2 col-form-label">Student Code.</label>
                              <div class="col-sm-3">
                                   <%= form_for :filter, method: :get do |f| %>
                                        <div class="input-group">
                                             <%= f.text_field :code, class: "form-control", placeholder: "Student Account No.", required: "" %>
                                             <span class="input-group-append"> 
                                             <%= f.submit 'Filter', class: "btn btn-primary"%>
                                        </div>
                                   <% end %>                   
                              </div>
                         </div>
                         <div id="student_details" class="collapse">
                              <div class="hr-line-dashed"></div>
                              <div class="form-group  row">
                                   <label class="col-sm-2 col-form-label">Name</label>
                                   <div class="col-sm-4">
                                        <% if @student.present? %>
                                             <h4><%= @student.name.present? ? @student.name : '' %></h4>
                                        <% end %>
                                   </div>
                              </div>
                              <div class="hr-line-dashed"></div>

                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight" style="padding-top: 0;">
     <div class="row">
          <div class="col-lg-12">
               <div class="ibox ">
                    <div class="ibox-title">
                         <h5>Revenues </h5>
                    </div>
                    <div id="student_revenues">
                         <% if @fees.present? %>
                              <%= render 'student_revenues', fees: @fees, student: @student %>
                         <% else %>
                              <div class="alert alert-warning">
                                   Please search the student first to get all the transportation fees.
                              </div>
                         <% end %>
                    </div>
               </div>
          </div>
     </div>
</div>